{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist/src",
    "rootDir": "./src",
    "baseUrl": "./src",
    "lib": [ "es2019", "dom" ],
    "incremental": true
  },
  "include": ["src/**/*", "**/*.spec.ts", "**/*.e2e-spec.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "./dist"]
}
